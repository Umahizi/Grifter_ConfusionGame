<Application
    x:Class="ConfusionGame.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConfusionGame">
    <Application.Resources>


        <ImageBrush x:Key="PageBackground" ImageSource="Assets/back.jpg"
                AlignmentX="Left"
                    Stretch="None"
                    AlignmentY="Top">
        </ImageBrush>
        <ImageBrush x:Key="MainPageBackground" ImageSource="Assets/twittermaze.png"
                AlignmentX="Left"
                    Stretch="None"
                    AlignmentY="Top">
        </ImageBrush>
        <Style TargetType="Button" x:Key="PlayButton">
            <Setter Property="Foreground" Value="DarkMagenta"/>
            <Setter Property="BorderBrush" Value="DarkMagenta"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>
        <ImageBrush x:Key="Logo" ImageSource="Assets/ghostLogo.png"
                AlignmentX="Left"
                    Stretch="None"
                    AlignmentY="Top">
        </ImageBrush>

    </Application.Resources>
</Application>
